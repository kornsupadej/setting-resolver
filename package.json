{
  "name": "@kornsupadej/setting-resolver",
  "version": "0.0.0",
  "description": "My toolbox for project settings",
  "author": "Kornsupadej Suvarnakasa",
  "license": "MIT",
  "scripts": {
    "test": "mocha --no-package --config=./mocha.config.cjs",
    "test:watch": "mocha --no-package --config=./mocha.config.cjs --watch",
    "test:coverage": "nyc pnpm test",
    "lint": "eslint \"**/*.{js,cjs}\" --fix",
    "lint:check": "eslint \"**/*.{js,cjs}\"",
    "format": "prettier \"**/*.{js,cjs,json,yml,yaml}\" --write",
    "format:check": "prettier \"**/*.{js,cjs,json,yml,yaml}\""
  },
  "lint-staged": {
    "*.{js,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@eslint/js": "^9.21.0",
    "chai": "^5.2.0",
    "eslint": "^9.21.0",
    "lint-staged": "^15.4.3",
    "mocha": "^11.1.0",
    "nyc": "^17.1.0",
    "prettier": "^3.5.2",
    "sinon": "^19.0.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@vitest/eslint-plugin": "1.1.31",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^3.8.3",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-mocha": "^10.5.0",
    "eslint-plugin-n": "^17.15.1",
    "globals": "^16.0.0",
    "lodash": "^4.17.21",
    "typescript-eslint": "^8.24.1"
  },
  "peerDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    },
    "eslint-import-resolver-typescript": {
      "optional": true
    }
  },
  "keywords": [
    "ast",
    "lint",
    "javascript",
    "ecmascript",
    "espree"
  ]
}
